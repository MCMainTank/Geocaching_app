<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcmaintank.geocache" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAG"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Geocache" >
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name="com.mcmaintank.geocache.ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.mcmaintank.geocache.ui.login.ServiceSelectionActivity"
            android:exported="false"
            android:label="@string/title_activity_service_selection" />
        <activity
            android:name="com.mcmaintank.geocache.ui.login.AdminServiceSelectionActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_service_selection" />
        <activity
            android:name="com.mcmaintank.geocache.ui.admin.ManageGeocacheActivity"
            android:exported="false"
            android:label="@string/title_activity_geocache_management" />
        <activity
            android:name="com.mcmaintank.geocache.ui.admin.ManageUserActivity"
            android:exported="false"
            android:label="@string/title_activity_user_management" />
        <activity
            android:name="com.mcmaintank.geocache.ui.admin.AdminGetGeocacheActivity"
            android:exported="false"
            android:label="@string/title_activity_get_geocache" />
        <activity
            android:name="com.mcmaintank.geocache.ui.admin.AdminViewGeocacheActivity"
            android:exported="false"
            android:label="@string/title_activity_view_geocache" />
        <activity
            android:name="com.mcmaintank.geocache.ui.admin.AdminViewUserActivity"
            android:exported="false"
            android:label="@string/title_activity_view_user" />
        <activity
            android:name="com.mcmaintank.geocache.ui.geocache.ViewHistoryActivity"
            android:exported="false"
            android:label="@string/title_activity_history_view" />
        <activity
            android:name="com.mcmaintank.geocache.ui.geocache.CreateGeocacheActivity"
            android:exported="false"
            android:label="@string/title_activity_create_geocache" />
        <activity
            android:name="com.mcmaintank.geocache.ui.geocache.GetGeocacheActivity"
            android:exported="false"
            android:label="@string/title_activity_get_geocache" />
        <activity
            android:name="com.mcmaintank.geocache.ui.geocache.ViewGeocacheActivity"
            android:exported="false"
            android:label="@string/title_activity_view_geocache"/>
        <activity
            android:name="com.mcmaintank.geocache.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>