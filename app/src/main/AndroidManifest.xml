<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.geocache" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Geocache" >
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.login.ServiceSelectionActivity"
            android:exported="false"
            android:label="@string/title_activity_service_selection" />
        <activity
            android:name=".ui.geocache.ViewHistoryActivity"
            android:exported="false"
            android:label="@string/title_activity_history_view" />
        <activity
            android:name=".ui.geocache.CreateGeocacheActivity"
            android:exported="false"
            android:label="@string/title_activity_create_geocache" />
        <activity
            android:name=".ui.geocache.GetGeocacheActivity"
            android:exported="false"
            android:label="@string/title_activity_get_geocache" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>